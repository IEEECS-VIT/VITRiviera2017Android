<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/img_wishlist_tut" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click on the star to add an Event to WishList. You can access your WishList from the Navigation Menu."
        android:layout_margin="15dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/bt_show_again"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Remind Me Later"
            android:background="@color/colorPrimaryDark"
            android:textColor="#FFFFFF"/>
        <Button
            android:id="@+id/bt_hide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Got It!"
            android:background="@color/colorPrimaryDark"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
</LinearLayout>