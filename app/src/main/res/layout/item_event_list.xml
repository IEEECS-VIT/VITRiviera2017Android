<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_checkbox_event"
        android:layout_height="40dp"
        android:layout_width="40dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iv_checkbox_event">
        <com.ieeecsvit.riviera17android.utility.CapitalizedTextView
            android:id="@+id/tv_event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_event_chap_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Chapter Name"
            android:layout_below="@+id/tv_event_title"/>
    </RelativeLayout>
</RelativeLayout>