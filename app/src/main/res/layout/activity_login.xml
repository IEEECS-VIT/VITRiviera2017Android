<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context="com.ieeecsvit.riviera17android.activity.LoginActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="1">

        <ImageView
            android:id="@+id/riviera"
            android:layout_width="wrap_content"
            android:layout_height="174dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/rivlogo" />

        <!-- <ImageView
             android:layout_width="200dp"
             android:layout_height="50dp"
             android:id="@+id/eventapp"
             android:foregroundGravity="center"
             android:src="@drawable/eventapp"
             android:layout_gravity="center"
             android:layout_marginTop="20dp"
             />
     -->

        <EditText
            android:id="@+id/regno"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/roundshape"
            android:ellipsize="start"
            android:hint="\tUSERNAME"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColorHint="#eeeeee"
            android:textSize="20dp" />


        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundshape"
            android:hint="\tPASSWORD"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColorHint="#eeeeee"
            android:textSize="20dp" />

        <!--
        <android.support.design.widget.TextInputEditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ellipsize="start"
        android:paddingLeft="5dp"
        android:textColorHint="#eeeeee"
        android:hint="\tPASSWORD"
        android:textSize="20dp"
        android:inputType="textPassword"
        android:typeface="serif"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundshape"/>
-->
        <Button
            android:id="@+id/loginbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/viewevents"
            android:layout_marginTop="40dp"
            android:background="@drawable/roundbutton"
            android:gravity="center"
            android:text="LOGIN"
            android:textColor="#ffffff"
            android:textSize="25dp" />

        <Button
            android:id="@+id/viewevents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundbutton"
            android:gravity="center"
            android:text="VIEW EVENTS"
            android:textColor="#ffffff"
            android:textSize="25dp" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:backgroundTint="@color/colorAccent"
            android:indeterminate="true"
            android:paddingTop="10dp" />

    </LinearLayout>
</RelativeLayout>
